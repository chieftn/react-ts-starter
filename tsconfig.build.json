{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "moduleResolution": "node",
        "outDir": "./build/ServiceGroupRoot/dist",
        "rootDir": "./src",
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
    },
    "exclude": [
        "./node_modules",
        "./build",
        "./scripts",
        "./acceptance-tests",
        "./webpack",
        "./jest",
        "./types",
        "./src/setupTests.ts",
        "./webpack.config.ts",
        "./webpack.config.js",
        "./webpack.*",
        "./**/*.spec.ts",
        "./**/*.spec.tsx"
    ],
    "include": [
        "./src/**/*"
    ],
    "awesomeTypescriptLoaderOptions": {
        "reportFiles": [
            "./src/**/*"
        ]
    }
}